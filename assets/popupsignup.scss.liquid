$modal_bg_color: {{ settings.modal_bg_color }};
$modal_bg_transparency: {{ settings.modal_bg_transparency }};
$signup_text_align: {{ settings.signup_text_align }};
$signup_bg_color: {{ settings.signup_bg_color }};
$signup_border_color: {{ settings.signup_border_color }};
.modalHolder {
  display: none;
  // or not - can be an inline form that gets popped...

  &.modalize {
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 9;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba($modal_bg_color, $modal_bg_transparency);
  }
  .modal {
    border: 1px solid $signup_border_color;
    padding: 1rem;
    background: $modal_bg_color;
    text-align: $signup_text_align;
  }
  .popupClose {
    position: absolute;
    top: 1rem;
    right: 1rem;
  }
}